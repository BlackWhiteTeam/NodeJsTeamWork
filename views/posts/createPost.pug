extends ../shared/_layout

block AdditionalCss
    link(rel="stylesheet", href='/css/login-register.css')

block content
    != messages()
    // .col-md-8.col-md-offset-2
    .container
        form#upload-picture-form.col-md-4.col-md-offset-4(method='post', enctype='multipart/form-data' action='/showPicture')
            label(for='upload-picture')
                h1.display-4.m-b-2.login-register-title Click to Upload/Change Image
                img.img-responsive(src='uploads/' + image, alt='Upload picture')
            input#upload-picture(type='file', name='imageupload', style='display:none', accept='image/*')

        form.col-md-6.col-md-offset-3(method='POST', action='/createPost')
            input.form-group.col-md-6.col-md-offset-3(name="description" placeholder='Write a description...')
            label.btn.btn-default.black-background.white.col-md-6.col-md-offset-3(for="postit")
                span.glyphicon.glyphicon-globe
                |&nbsp;&nbsp;Post
            input#postit.form-group(type='submit', name='uploadimage', style='display:none')

block AdditionalJS
    script(src="/js/uploadImagesEvent.js")