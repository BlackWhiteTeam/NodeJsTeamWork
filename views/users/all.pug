extends ../shared/_layout

block AdditionalCss
    link(rel='stylesheet', href='/css/users.css')

block content
    .container
        .row.col-sm-6.col-md-offset-4
            form#search-for-users.navbar-form(action='/users', method='POST')
                p.form-group
                    input#searchField.form-control(type='text', name='searchedUser' placeholder='Search User By Name', value=lastInput, autocomplete='off', spellcheck='false')
                p.form-group
                    input#searchButton.btn.btn-default.black-background.white(type='submit', value='Search')
        each user in context
            .row
                .col-sm-6.col-md-4
                    .thumbnail
                        img(src=user.profilePicture.secure_url, alt='Profile picture')
                        .caption
                            h3
                                strong
                                    =user.name
                            if loggedIn || canSeeProfiles
                                a.btn.btn-default.black-background.white(href='/users/' + user._id, role='button') View Profile
block AdditionalJS
    script(src="/js/autoSearch.js")

