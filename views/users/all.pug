extends ../shared/_layout

block content
    .container
            each user in context
                .row
                    .col-sm-6.col-md-4
                        .thumbnail
                        img(src='../../public/images/defaultpic.jpg', alt='Profile picture')
                        .caption
                            h3
                                strong User: &nbsp
                                =user.name
                            ul
                                li
                                    strong Profile picture: &nbsp
                                    | TODO
                                li
                                    strong Email: &nbsp
                                    =user.email
                                li
                                    strong Password - For test purpose: &nbsp
                                    =user.password
                            a.btn.btn-primary(href='/users/' + user._id, role='button') View Profile

