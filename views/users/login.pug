extends ../shared/_layout

block AdditionalCss
    link(rel="stylesheet", href='/css/login-register.css')

block content
    != messages()

    .main.container
        .row
            .col-md-6.col-md-offset-3
                h1.display-4.m-b-2 Login

                form(action='/login' method='post')
                    p.form-group
                        label(for='username') Username:
                        input#username.form-control(name='username', required='required', type='text', placeholder='Username')
                    p.form-group
                        label(for='password') Password:
                        input#password.form-control(name='password', required='required', type='password', placeholder='Password')
                    p.form-group
                        input.btn.btn-default.black-background.white(type='submit', value='Login')
                    p
                        a(href='/register') You don't have an account? Click here to Sign up!
