extends ../shared/_layout

block content
    .container
        .row
            .col-md-6.col-md-offset-3
                h1.display-4.m-b-2 Login

                form(method='POST' action='/login')
                    div.form-group
                        label(for='username') Username:
                        input#username.form-control(type='text', placeholder='Username' name='name')
                    div.form-group
                        label(for='pw') Password:
                        input#pw.form-control(type='password' placeholder='Password' name='password')
                    button#register-submit.btn.btn-primary(type='submit') Log in
                    a#regist   er-button(href='/register') You don't have an account? Click here!
