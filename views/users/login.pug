extends ../shared/_layout

block content
    .container
        .row
            .col-md-6.col-md-offset-3
                h1.display-4.m-b-2 Login

                form(action='/login' method='post')
                    p.form-group
                        label(for='username') Username:
                        input#username.form-control(name='username', required='required', type='text', placeholder='Username')
                    p.form-group
                        label(for='password') Password:
                        input#password.form-control(name='password', required='required', type='password', placeholder='Password')
                    p.form-group
                        input.btn.btn-primary(type='submit', value='Login')
